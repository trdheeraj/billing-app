<div class="container">
  <% if notice %>
    <div class="alert alert-success" role="alert">
      <p id="notice"><%= notice %></p>
    </div>
  <% end %>

  <h1>Suppliers</h1>

  <table class="table table-striped table-bordered table-hover table-responsive">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Mobile</th>
        <th>Email</th>
        <th>Address Line 1</th>
        <th>Address Line 2</th>
        <th>District</th>
        <th>State</th>
        <th>Postal Code</th>
        <th colspan="4">Action</th>
      </tr>
    </thead>

    <tbody>
      <% @suppliers.each do |supplier| %>
        <tr>
          <td><%= supplier.name %></td>
          <td><%= supplier.mobile %></td>
          <td><%= supplier.email %></td>
          <td><%= supplier.address.address_1 %></td>
          <td><%= supplier.address.address_2 %></td>
          <td><%= supplier.address.district %></td>
          <td><%= supplier.address.state %></td>
          <td><%= supplier.address.postal_code %></td>
          <td><%= link_to 'Show', supplier %></td>
          <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
          <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Supplier', new_supplier_path %>
</div>
